<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Email:</strong>
  <% if @post.user %>
    <%= link_to "#{@post.user.email}", @post.user %>
  <% else %>
    Anonymous
  <% end %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<%= link_to 'Edit', edit_post_path(@post, page: @current_page) %> |
<%= link_to 'Back', posts_path(page: @current_page) %>
